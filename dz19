using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {

            bool progWork = true;
            string[] nameWorker = new string[0];
            string[] postWorker= new string[0];

            while (progWork)
            {

            Console.WriteLine("\n1. - Добавить досье \n2. - Вывести все досье \n3. - Удалить досье \n4. - Поиск по фамилии \n5. - Выход  ");

            int userInPut = Convert.ToInt32(Console.ReadLine());


            switch (userInPut)
            {
                case 1:
                        CreateDossier(ref nameWorker,ref postWorker);
                    break;

                case 2:
                    if (nameWorker.Length==0)
                        {
                            Console.WriteLine("Нет досье"); 
                        }
                    else
                        {
                            ShowDossier(ref nameWorker, ref postWorker);
                        }
                        break;
                case 3:
                    if (nameWorker.Length == 0)
                        {
                            Console.WriteLine("Нет досье");
                        }
                        else
                        {
                            Delete(ref nameWorker, ref postWorker);
                        }
                        break;
                case 4:
                    if (nameWorker.Length == 0)
                        {
                            Console.WriteLine("Нет досье");
                        }
                        else
                        {
                            FoundName(ref nameWorker, ref postWorker);
                        }
                        break;
                case 5:
                    progWork = false;
                        break;
                default:
                    Console.WriteLine("Неизвестная команда");
                        break;
            }
            }
                Console.Clear();
            Console.ReadKey();

        }

        static void Delete(ref string[] nameWorker, ref string[] postWorker)
        {
            Console.WriteLine("Введите номер досье:");
            int userInPut = Convert.ToInt32(Console.ReadLine());
            if (userInPut == nameWorker.Length)
            {
                string[] tempName = new string[nameWorker.Length - 1];
                string[] tempPost = new string[postWorker.Length - 1];
                for (int i = 0; i < tempName.Length; i++)
                {
                    tempName[i] = nameWorker[i];
                    tempPost[i] = postWorker[i];
                }

                nameWorker = tempName;
                postWorker = tempPost;
            }
            else if (userInPut > nameWorker.Length || userInPut <= 0)
            {
                Console.WriteLine("Такого досье нет.");
            }
            else
            {
                string[] tempName = new string[nameWorker.Length];
                string[] tempPost = new string[postWorker.Length];

                for (int i = 0; i < tempName.Length; i++)
                {
                    if (userInPut!=i-1)
                    {
                        tempName[i] = nameWorker[i];
                        tempPost[i] = postWorker[i];
                    }
                }
                nameWorker = tempName;
                postWorker = tempPost;

            }
        }

        static void FoundName(ref string[] nameWorker, ref string[] postWorker)
        {
            Console.WriteLine("Введите фамилию: ");
            string userInPut = Console.ReadLine();
            for (int i = 0; i < nameWorker.Length; i++)
            {
                if (nameWorker[i]==userInPut)
                {
                    Console.WriteLine($"Совподение найдено! Досье номер {i + 1}: ФИО: {nameWorker[i]}   Должность: {postWorker[i]}");
                }
                else
                {
                    Console.WriteLine("Совпадений не найдено!");
                }
            }

        }

        static void ShowDossier(ref string[] nameWorker, ref string[] postWorker)
        {
            for (int i = 0; i < nameWorker.Length; i++)
            {
            Console.Write($"Досье номер {i+1}: ФИО: {nameWorker[i]}   Должность: {postWorker[i]}  -  ");
            }
        }

        static void CreateDossier(ref string[] nameWorker, ref string[] postWorker)
        {
            string[] tempName = new string[nameWorker.Length + 1];
            string[] tempPost = new string[postWorker.Length + 1];
            Console.WriteLine("Введите ФИО сотрудника:");
            string name = Console.ReadLine();

                for (int i = 0; i < nameWorker.Length; i++)
                {
                tempName[i] = nameWorker[i];
                }
                tempName[tempName.Length - 1] = name;
            nameWorker = tempName;
            
            Console.WriteLine("Введите должность сотрудника:");
            string post = Console.ReadLine();

                for (int i = 0; i < postWorker.Length; i++)
                {
                tempPost[i] = postWorker[i];
                }
                tempPost[tempPost.Length - 1] = post;
                postWorker = tempPost;
            

        }

    }
}
