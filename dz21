using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {
            ConvertNumbers();
        }

        static void ConvertNumbers()
        {
            bool progWork = true; 
            while (progWork)
            {

            Console.WriteLine("Введите число:");
            string userInPut = Console.ReadLine();
            if (int.TryParse(userInPut,out int result))
            {
                Console.WriteLine($"Число успешно преобразованно: {result}");
                    Console.ReadKey();
                    progWork = false;
            }
            else
            {
                Console.WriteLine("Не удалось преобразовать число, попробуйте снова");
            }
            }
        }
    }
}
